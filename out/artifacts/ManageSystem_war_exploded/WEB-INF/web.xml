<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>FirstPage</servlet-name>
        <servlet-class>server.FirstPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FirstPage</servlet-name>
        <url-pattern>/FirstPage</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>server.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>server.registerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addcar</servlet-name>
        <servlet-class>server.AddcarServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addcar</servlet-name>
        <url-pattern>/addcar</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>delete</servlet-name>
        <servlet-class>server.DeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>delete</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>handlemessage</servlet-name>
        <servlet-class>server.HandleBookingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>handlemessage</servlet-name>
        <url-pattern>/handlemessage</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>sendMessage</servlet-name>
        <servlet-class>server.sendMessageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sendMessage</servlet-name>
        <url-pattern>/sendMessage</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Search</servlet-name>
        <servlet-class>server.SearchcarServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Search</servlet-name>
        <url-pattern>/Search</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>WxServlet</servlet-name>
        <servlet-class>wxcon.wxconnect</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WxServlet</servlet-name>
        <url-pattern>/WxServlet</url-pattern>
    </servlet-mapping>
</web-app>